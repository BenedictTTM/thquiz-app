# ============================================================================
# ENVIRONMENT VARIABLES - PRODUCTION SEARCH & CACHE CONFIGURATION
# ============================================================================

# Redis Configuration (Distributed Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3

# Cache Configuration
CACHE_TTL=300                    # Default cache TTL in seconds (5 minutes)
CACHE_MAX_SIZE=10000             # Maximum number of cached items
CACHE_FACETS_TTL=600             # Facets cache TTL (10 minutes)
CACHE_AUTOCOMPLETE_TTL=3600      # Autocomplete cache TTL (1 hour)

# MeiliSearch Configuration (Already exists, keeping for reference)
MEILI_HOST=http://localhost:7700
MEILI_ADMIN_KEY=your-master-key-here

# Search Service Configuration
SEARCH_TIMEOUT_MS=5000           # Search query timeout (5 seconds)
SEARCH_MIN_QUERY_LENGTH=2        # Minimum search query length
SEARCH_MAX_RESULTS_PER_PAGE=100  # Maximum results per page
SEARCH_CIRCUIT_BREAKER_THRESHOLD=5         # Circuit breaker failure threshold
SEARCH_CIRCUIT_BREAKER_RESET_TIME=60000    # Circuit breaker reset time (1 minute)

# Performance Monitoring
METRICS_REPORTING_INTERVAL=300000          # Metrics reporting interval (5 minutes)
ENABLE_PERFORMANCE_LOGGING=true            # Enable detailed performance logging
ENABLE_TRACE_LOGGING=true                  # Enable trace ID logging

# Database Configuration (Already exists, keeping for reference)
DATABASE_URL="postgresql://user:password@localhost:5432/sellr_db"

# Application Configuration
NODE_ENV=production
PORT=3001
